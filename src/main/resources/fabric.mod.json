{
  "schemaVersion": 1,
  "id": "porting_lib",
  "version": "${version}",
  "name": "Porting Lib",
  "description": "A collection of utilities for porting mods from Forge to Fabric.",
  "authors": [
    "The Create Fabric Team"
  ],
  "contact": {
    "sources": "https://github.com/Fabricators-of-Create/Porting-Lib"
  },
  "license": "LGPL",
  "icon": "assets/porting_lib/icon.png",
  "environment": "*",
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=${fabric_api_version}",
    "minecraft": "${minecraft_dependency}",
    "java": ">=${java_version}"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ]
    }
  }
}
